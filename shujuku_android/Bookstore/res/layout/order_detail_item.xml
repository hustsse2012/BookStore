<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/oid_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品编号"/>
        <TextView
            android:id="@+id/oid"
            android:layout_below="@id/oid_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ordertime_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单生成时间"/>
        <TextView
            android:layout_below="@id/ordertime_label"
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/del_address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送达地点"/>
        <TextView
            android:id="@+id/address"
            android:layout_below="@id/del_address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >
        
            <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/diliver_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送货方式"/>
        <TextView
            android:id="@+id/deliver_option"
            android:layout_below="@id/diliver_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/money_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易金额"/>
        <TextView
            android:id="@+id/money"
            android:layout_below="@id/money_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/count_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易数量"/>
        <TextView
            android:id="@+id/item_counts"
            android:layout_below="@id/count_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    </LinearLayout>
    


</LinearLayout>
